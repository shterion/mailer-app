{
  "name": "mailer-app",
  "version": "1.0.0",
  "description": "Email scheduler",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm install && node index.js",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "server": "nodemon index.js",
    "lint-fix": "eslint index.js app test --ext .js --ext .json --fix",
    "pretest": "eslint index.js app config test --ext .js --ext .json",
    "test": "mocha test/* --timeout 50000 --exit",
    "test-mocha": "mocha test/*",
    "test-watch": "nodemon --exec \"npm test\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "concurrently": "^4.0.1",
    "config": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "mongoose": "^5.3.4",
    "mocha": "^5.2.0",
    "swagger-ui-express": "^4.1.2",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "supertest": "^3.3.0"
  },
  "author": "Shterion Yanev",
  "license": "MIT",
  "nyc": {
    "exclude": [
      "config",
      "tests",
      "routes/api/utils/logger.js"
    ]
  }
}
